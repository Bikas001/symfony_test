{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .form-control{
        margin-top: 5px;
        margin-bottom: 5px;
    }
    .error{
        color:red;
    }

</style>

<div class="example-wrapper">
   <div class="container">
       <div class="row">
           <div class="col">

               <form  method="POST" action="{{ path('login') }}">
                   {% if error %}
                       <div class="error">{{ error.messagekey }}</div>
                   {% endif %}
                   <div class="from-group">
                       <input type="text" value="{{ lastUsername }}" name="_username" class="form-control" placeholder="Username">

                   </div>
                   <div class="from-group" >

                       <input type="password" name="_password" class="form-control" placeholder="Password">
                   </div>
{#                   <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">#}
{#                   <input type="hidden" name="_target_path" value="{{ app.request.get('redirect-to') }}">#}

                     <input type="submit" name="Login" value="Login" class="btn btn-primary">

               </form>
           </div>
       </div>
   </div>




</div>


{% endblock %}
