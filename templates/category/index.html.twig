{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}


{% block body %}
    <script>
        $(document).ready(function (){
            $.ajax({
                url: '/category',
                type: 'GET',
                success: function(data){

                    if (!data.error) {
                        var a;

                        for (let i = 0; i < data.length; i++) {
                            category = data[i];
                             a = $('<td class = "s"></td>');
                            $('.s', a).html(category['name']);

                        }
                        $('#category').append(a);


                    }

                }
            });

        });
    </script>


 <div class="container">
     <nav aria-label="breadcrumb">
         <ol class="breadcrumb">
             <li class="breadcrumb-item"><a href="/">Home</a></li>
             <li class="breadcrumb-item"><a href="{{ path('categorycategory') }}">Category</a></li>
             {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                 <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('categorycreate') }}">Add Category</a></li>
             {% endif %}
         </ol>
     </nav>
